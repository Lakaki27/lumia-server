{% extends 'base.html.twig' %}
{% import "_macros.twig" as macros %}

{% block body %}
<h1 class="text-3xl font-bold">Nouveau r√¥le</h1>
<div class="w-250 flex flex-row gap-4 justify-between mb-20">
	<div class="flex">
		{{ form_start(roleForm) }}
		<div>
			<div>
				{{ form_label(roleForm.name, "Nom interne: ") }}
				{{ form_widget(roleForm.name) }}
				{% if form_errors(roleForm.name) %}
				<div class="text-red-500">{{ form_errors(roleForm.name) }}</div>
				{% endif %}
			</div>
		</div>

		<div class="mb-5">
			<div>
				{{ form_label(roleForm.slug, "Nom complet: ") }}
				{{ form_widget(roleForm.slug) }}
				{% if form_errors(roleForm.slug) %}
				<div class="text-red-500">{{ form_errors(roleForm.slug) }}</div>
				{% endif %}
			</div>
		</div>

		<button
			class="cursor-pointer flex items-center gap-2 min-h-[36px] min-w-[36px] text-center justify-center transition border-(--lumia-purple) border-1 bg-(--lumia-purple) px-2 py-1 rounded text-white hover:bg-white hover:border-(--lumia-gold) hover:text-(--lumia-gold)"
			type="submit">Ajouter</button>

		{{ form_end(roleForm) }}
	</div>
</div>

{% endblock body %}